@model ProductApp.Models.Category

@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

<h2>AddCategory</h2>

<form class="form-group" method="post">
    <b>Category Name</b>

    @Html.TextBoxFor(x=>x.CategoryName, new{@class="form-control"})

    <br />

    <button href="/Product/AddCategory" class="btn btn-success">Add</button>
</form>
