@model List<ProductApp.Models.Category>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}


    <h4>This is tool list page</h4>
    <br />

    <div>
        <table class="table table-bordered">
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
            </tr>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.CategoryID</td>
                        <td>@cat.CategoryName</td>
                    </tr>
                }
            </tbody>
        </table>
        <button class="btn btn-info">Info button actionless</button>
    </div>
