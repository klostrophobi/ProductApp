@model List<ProductApp.Models.Category>

@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

<h2>Category</h2>


    <br />

    <div>
        <table class="table table-bordered">
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
                <th>Operations</th>
            </tr>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td>@cat.CategoryID</td>
                        <td>@cat.CategoryName</td>
                        <td>
                            <a href="/Category/DeleteCategory/@cat.CategoryID" class="btn btn-danger">Delete</a>
                            <a href="/Category/GetCategory/@cat.CategoryID" class="btn btn-success">Update</a>
                            @Html.ActionLink("Details", "Index", "Product", 
                                new { ID = @cat.CategoryID }, 
                                new { @class = "btn btn-primary"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Category/AddCategory" class="btn btn-info">Add New Category</a>
    </div>

