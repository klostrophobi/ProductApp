@model ProductApp.Models.Category

@{
    ViewData["Title"] = "GetCategory";
    Layout = "~/Views/Shared/_LayoutNavbar.cshtml";
}

<h2>GetCategory</h2>

@using (Html.BeginForm("UpdateCategory","Category",FormMethod.Post))
{
    <b>Category ID</b>

    @Html.TextBoxFor(x=>x.CategoryID, new{@class="form-control"})

    <br />
    <b>Category Name</b>

    @Html.TextBoxFor(x=>x.CategoryName, new{@class="form-control"})

    <br />

    <button href="/Category/UpdateCategory" class="btn btn-success">Update</button>
}

